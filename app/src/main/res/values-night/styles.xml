<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/standard_indent_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_5</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:trackTint">@drawable/new_track</item>
        <item name="android:thumbTint">@drawable/new_thumb</item>
    </style>

    <style name="IconNothingFound">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp_110</item>
        <item name="android:src">@drawable/icon_nothing_found_night</item>
        <item name="android:background">@null</item>
    </style>

    <style name="IconNoInternet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp_110</item>
        <item name="android:src">@drawable/icon_no_internet_night</item>
        <item name="android:background">@null</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/yp_black</item>
        <item name="itemTextColor">@color/bottom_nav_color_night</item>
        <item name="itemIconTint">@color/bottom_nav_color_night</item>
    </style>
</resources>