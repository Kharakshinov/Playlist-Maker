<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonMainMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/standard_indent_16</item>
        <item name="android:layout_marginEnd">@dimen/standard_indent_16</item>
        <item name="android:layout_height">@dimen/margin_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/corner_radius_16</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:stateListAnimator">@null</item>

        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>

        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_10</item>
        <item name="iconTint">@color/yp_black</item>
    </style>

    <style name="ButtonSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/standard_indent_16</item>
        <item name="android:paddingEnd">@dimen/standard_indent_16</item>
        <item name="android:paddingTop">@dimen/margin_42</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@color/white</item>

        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

        <item name="iconGravity">end</item>
        <item name="iconTint">@color/grey</item>
    </style>

    <style name="TopLeftText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_28</item>
        <item name="android:layout_marginTop">@dimen/margin_14</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_22</item>
    </style>

    <style name="Switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/standard_indent_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_5</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="IconGoBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/icon_arrow_back</item>
        <item name="tint">?attr/colorOnSecondary</item>
        <item name="iconGravity">textStart</item>
        <item name="android:layout_marginTop">@dimen/margin_20</item>
    </style>
</resources>