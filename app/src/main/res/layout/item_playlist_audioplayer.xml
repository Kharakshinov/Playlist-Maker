<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_61">

    <ImageView
        android:id="@+id/photoPlaylist"
        android:contentDescription="@string/image_playlist"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        tools:src="@drawable/icon_no_reply"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_16"
        android:textColor="?attr/text_color"
        android:lines="1"
        android:maxWidth="@dimen/dp_248"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginStart="@dimen/dp_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/photoPlaylist" />

    <TextView
        android:id="@+id/number_tracks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_11"
        android:textColor="?attr/color_grey_white"
        android:lines="1"
        android:maxWidth="@dimen/dp_248"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:layout_marginStart="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@id/playlist_name"
        app:layout_constraintStart_toEndOf="@id/photoPlaylist" />

</androidx.constraintlayout.widget.ConstraintLayout>