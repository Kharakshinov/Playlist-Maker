<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PlaylistMaker.MainMenu" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/blue_3772E7</item>
        <item name="text_color">@color/yp_black</item>
    </style>

    <style name="Theme.PlaylistMaker.Settings" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="button_background_color">@color/white</item>
        <item name="text_color">@color/black</item>
        <item name="icon_color">@color/grey</item>
    </style>

    <style name="Theme.PlaylistMaker.Search" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="text_color">@color/black</item>
        <item name="text_color_white_black">@color/white</item>
        <item name="color_grey_white">@color/yp_text_grey</item>
        <item name="search_color">@color/light_grey</item>
        <item name="search_hint_color">@color/yp_text_grey</item>
        <item name="search_text_color">@color/yp_black</item>
    </style>

    <style name="Theme.PlaylistMaker.MediaLibrary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="text_color">@color/black</item>
    </style>
</resources>