<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/photoPlaylist"
        android:contentDescription="@string/image_playlist"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_160"
        tools:src="@drawable/icon_no_reply"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/playlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_12"
        android:textColor="?attr/text_color"
        android:layout_marginTop="@dimen/dp_4"
        android:lines="1"
        android:maxWidth="@dimen/dp_150"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        app:layout_constraintTop_toBottomOf="@id/photoPlaylist"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/number_tracks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_12"
        android:textColor="?attr/text_color"
        android:lines="1"
        android:maxWidth="@dimen/dp_150"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        app:layout_constraintTop_toBottomOf="@id/playlist_name"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>