<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonMainMenu" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/standard_indent_16</item>
        <item name="android:layout_marginEnd">@dimen/standard_indent_16</item>
        <item name="android:layout_height">@dimen/margin_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/corner_radius_16</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:stateListAnimator">@null</item>

        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>

        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_10</item>
        <item name="iconTint">@color/yp_black</item>
    </style>

    <style name="ButtonSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/standard_indent_16</item>
        <item name="android:paddingEnd">@dimen/standard_indent_16</item>
        <item name="android:paddingTop">@dimen/margin_42</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">?attr/button_background_color</item>

        <item name="android:gravity">start</item>
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>

        <item name="iconGravity">end</item>
        <item name="iconTint">?attr/icon_color</item>
    </style>

    <style name="TopLeftText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_14</item>
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="Switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/standard_indent_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_5</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="IconGoBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/baseline_arrow_back_24</item>
        <item name="tint">?attr/text_color</item>
        <item name="iconGravity">textStart</item>
        <item name="android:layout_marginTop">@dimen/dp_16</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
    </style>

    <style name="IconNothingFound">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp_110</item>
        <item name="android:src">@drawable/icon_nothing_found</item>
        <item name="android:background">@null</item>
    </style>

    <style name="IconNoInternet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp_110</item>
        <item name="android:src">@drawable/icon_no_internet</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TrackInfo">
        <item name="android:layout_width">@dimen/dp_235</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:gravity">right</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
    </style>

    <style name="TrackField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/yp_text_grey</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
    </style>

    <style name="TabLayoutMediaLibrary" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
    </style>

</resources>